{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "react",
    "incremental": true,
    "declaration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": [
    "src/*.ts",
    "types/*.ts",
    "utils/*.ts",
  ],
  "exclude": [
    "./node_modules"
  ]
}